@model IEnumerable<SimplySeniors.Models.Profile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="chatHeader">Conversation Street</h2>

<h3 id="memberListHeader">Available Members:</h3>
<div id="talkjs-container" style="width: 80%; margin: 30px; height: 500px"><i>Now Loading your chat...</i></div>

<table class="table table-striped table-hover" id="chatList">
    <thead class="thead-dark">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.FIRSTNAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LASTNAME)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FIRSTNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LASTNAME)
            </td>

        </tr>
    }
</table>

<script type="text/javascript" src="~/Scripts/chat.js"></script> @*Running custom chat.js in Scripts folder for interactive chat features.*@
<script type="text/javascript" src="~/Scripts/Main.js"></script>

<div id="helpLink"><p> Need help learning about messaging? Visit our <b>Help</b> tab on the navigation menu at the top of this page or <a href='/Home/HelpPage#MessageHelp'> Click here</a>.</p></div>
