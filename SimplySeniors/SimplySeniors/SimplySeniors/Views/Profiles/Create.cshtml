@using System.Web.UI.WebControls
@model SimplySeniors.Models.Profile

@{
    ViewBag.Title = "Create";
}
<body id="creationPageBody" class="aqua-gradient color-block mb-3 mx-auto rounded-circle z-depth-1">
    <h2 id="creationHeader">Create your user profile</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4 id="profileCreationInfo">Please fill in the information below, upload a single image for your photo.</h4>

        <div class="form-horizontal" id="creationForm">

            <hr />

            <div class="form-group " id="editBox">

                @Html.LabelFor(model => model.FIRSTNAME, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.FIRSTNAME, new { htmlAttributes = new { @class = "", id = "firstNameBox", style = "margin-left:8px; " } })
                @Html.ValidationMessageFor(model => model.FIRSTNAME, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.LASTNAME, htmlAttributes: new { @class = "control-label ", style = "margin-left:25px" })
                @Html.EditorFor(model => model.LASTNAME, new { htmlAttributes = new { @class = "", id = "lastNameBox", style = "margin-left:8px;"}})
                @Html.ValidationMessageFor(model => model.LASTNAME, "", new { @class = "text-danger" })
                <br />
                @Html.LabelFor(model => model.BIRTHDAY, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.BIRTHDAY, new { htmlAttributes = new { @class = "", id = "birthdayBox" } })
                @Html.ValidationMessageFor(model => model.BIRTHDAY, "", new { @class = "text-danger" })
                <br />
                @Html.LabelFor(model => model.CITY, htmlAttributes: new { @class = "control-label ", style = "" })
                @Html.EditorFor(model => model.CITY, new { htmlAttributes = new { @class = "", id = "cityBox" } })
                @Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger" })

                @Html.Label("State", htmlAttributes: new { @class = "control-label", style = "margin-left:30px" })
                @Html.DropDownListFor(x => x.STATE, SimplySeniors.Controllers.SelectListItemHelper.GetStatesList(), htmlAttributes: new { @class = "col-lg-3", id = "stateBox", style = "margin-bottom:-40px; " })
                @Html.ValidationMessageFor(model => model.STATE, "", new { @class = "text-danger" })
                <br />
                @Html.LabelFor(model => model.VETSTATUS, "Are you a Veteran?", htmlAttributes: new { @class = "control-label", id = "vetLabel", style = "padding-right:40px" })
                @Html.Label("Yes")
                @Html.RadioButtonFor(model => model.VETSTATUS, "True", htmlAttributes: new { @class = "custom-radio", id = "vetYes" })
                @Html.Label("No")
                @Html.RadioButtonFor(model => model.VETSTATUS, "False", htmlAttributes: new { @class = "custom-radio", id = "vetNo" })
                @Html.ValidationMessageFor(model => model.VETSTATUS, "", new { @class = "text-danger" })
                <br />
                @Html.LabelFor(model => model.OCCUPATION, "Occupation", htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.OCCUPATION, new { htmlAttributes = new { @class = "col-3.25", id = "occupationBox" } })
                @Html.ValidationMessageFor(model => model.OCCUPATION, "", new { @class = "text-danger" })
                <br />
                @Html.LabelFor(model => model.FAMILY, "Family", htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.FAMILY, new { htmlAttributes = new { @class = "", id = "familyBox" } })
                @Html.ValidationMessageFor(model => model.FAMILY, "", new { @class = "text-danger" })
                <br />
                @Html.LabelFor(model => model.BIO, "Please type a short biography", htmlAttributes: new { @class = "control-label", style = "margin-left:35px" })
                <div class="form-group" id="bioBox">
                    @Html.TextAreaFor(model => model.BIO, new { htmlAttributes = new { @class = "col-lg-10", id = "bioBox" } })
                    @Html.ValidationMessageFor(model => model.BIO, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Continue to hobbies" class="btn btn-outline-primary" id="addHobbyButton" />

            </div>
            <div class="container-lg">
                <Iframe runat="server" id="photoUploadInjectedBox" src="~/PhotoUploadForm.aspx"></Iframe>
            </div>
        </div>

    }
</body>


<p id="helpInstructionsCreationPage"> Why do we need to fill out this form? Visit our <b>Help</b> tab on the navigation menu at the top of this page or <a href='/Home/HelpPage#ProfileHelp'> Click here</a>.</p>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
