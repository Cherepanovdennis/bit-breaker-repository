@model SimplySeniors.Models.HobbyBridge

@{
    ViewBag.Title = "Edit";
}

<h2>Change Hobby</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group" id="editBox">
            @Html.LabelFor(model => model.HobbiesID,  htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.DropDownList("HobbiesID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HobbiesID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </div>
    </div>
}

<div id="eventLink">
    @Html.ActionLink("Back to Your Hobby List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
