@model IEnumerable<SimplySeniors.Models.NewsAPI>

@{
    ViewBag.Title = "NewsFeed";
}

<h2>NewsFeed</h2>
<a href="https://newsapi.org/">Powered by News API</a>
<p>
    @Html.ActionLink("Return to Home", "HomePage", null, new { id = "eventButton" })
</p>

<input type="text" id="myInput" onkeyup="searchfunction()" placeholder="Search for names.." title="Type in a name">

@foreach (var item in Model) { 
<div id="individualPost">
    <img href=@Html.DisplayFor(modelItem => item.URLImage)>
    <div id="statusName">@Html.DisplayFor(modelItem => item.SourceName)</div>
    <div id="statusName">@Html.DisplayFor(modelItem => item.Author)</div>
    <hr />
    <a href="@Html.DisplayFor(modelItem => item.URL)" id="statusTitle">@Html.DisplayFor(modelItem => item.Title)</a>
    <div id="postDescription">
        @Html.DisplayFor(modelItem => item.Description)
    </div>
    <div>@Html.DisplayFor(modelItem => item.PublishTime)</div>
</div>


}
<script>
    function searchfunction() {
        var input, filter, ul, li, a, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        posts = document.getElementById("individualPost");
        console.log(posts);
        li = posts.getElementsByTagName("div");
        console.log(5);
        console.log(li);
        for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("a")[0];
            txtValue = a.textContent || a.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
            } else {
                li[i].style.display = "none";
            }
        }
    }
</script>

