@model ThrowawayProject.Models.ProfileSettings

@{
    ViewBag.Title = "settings";
}


@{
    ViewBag.Title = "settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>@Model.username user page</h2>
<body>
    <div class="container-fluid">

        <div class="row">


            <center>
                <h1 id="profileHeader"> @Model.username </h1>
                <img width="100px" height="100px" src="https://i.ytimg.com/vi/Wacz0-mRzWg/hqdefault.jpg " id="profileImage" />
                <br />
                @Html.ActionLink("Edit Profile", "edit", "profile")
            </center>
            <hr />

            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <b>Username: </b> <br /> <input class="fill-width" type="text" name="Username" value="@Model.username" readonly>
            </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <b>Date-of-birth: </b> <br /> <input type="text" name="DOB" value="@Model.DOB" readonly>
            </div>

            <br />
            <br />
            <hr />

            <div class="col-sm-2"></div>
            <div class="col-sm-4"> <b>Phone Number:</b> <br /> <input type="text" name="phonenumber" value="@Model.phonenumber" readonly> </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-4"> <b>Email:</b> <br /> <input type="text" name="Email" value="@Model.email" readonly></div>


            <br />
            <br />
            <hr />

            <div class="col-sm-1"></div>
            <div class="col-sm-3"> <b>State: </b>  <br /> <input type="text" name="State" value="@Model.state" readonly /> </div>
            <div class="col-sm-1"> </div>
            <div class="col-sm-4"> <b>City: </b> <br /> <input type="text" name="City" value="@Model.city" readonly></div>
            <div class="col-sm-3"> <b>Team: </b> <br /> <input type="text" name="Team" value="@Model.team" readonly /> </div>

            <br />
            <br />
            <hr />

            <div class=" col-lg-12"> <b> Description: </b> <br /> <input type="text" name="desc" value="@Model.desc" readonly /></div>
            <br />
            <br />
            <hr />


        </div>

        @Html.ActionLink("<< Back Home", "Index", "Home")

    </div>

</body>

