
@{
    ViewBag.Title = "settings";
}

<h2>User Profile</h2>
<body>
    <div class="container-fluid">

        <div class="row">


            <center>
                <h2> John Doe </h2>
                <img width="100px" height="100px" src="https://i.ytimg.com/vi/Wacz0-mRzWg/hqdefault.jpg " />
                <br />
                @Html.ActionLink("Edit Profile","edit","profile")
            </center>
            <hr />

            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <b>Username: </b> <br /> <input class="fill-width" type="text" name="Username" value="John Doe" readonly>
            </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <b>Date-of-birth: </b> <br /> <input type="text" name="DOB" value="11-09-1993" readonly>
            </div>

            <br />
            <br />
            <hr />

            <div class="col-sm-2"></div>
            <div class="col-sm-4"> <b>Phone Number:</b> <br /> <input type="text" name="phonenumber" value="555-555-5555" readonly> </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-4"> <b>Email:</b> <br /> <input type="text" name="Email" value="JohnDoe@gmail.com" readonly></div>


            <br />
            <br />
            <hr />

            <div class="col-sm-1"></div>
            <div class="col-sm-3"> <b>State: </b>  <br /> <input type="text" name="State" value="" readonly /> </div>
            <div class="col-sm-1"> </div>
            <div class="col-sm-4"> <b>City: </b> <br /> <input type="text" name="City" value="Salem" readonly></div>
            <div class="col-sm-3"> <b>Team: </b> <br /> <input type="text" name="Team" value="" readonly /> </div>

            <br />
            <br />
            <hr />

            <div class=" col-lg-12"> <b> Description: </b> <br /> <input type="text" name="desc" value="My name is Jane Doe" readonly /></div>
            <br />
            <br />
            <hr />


        </div>

        @Html.ActionLink("<< Back Home","Index", "Home")

    </div>

</body>



