@model SimplySeniors.Models.ViewModel.CCViewModel

@{
    ViewBag.Title = "Create";
}
<meta charset="UTF-8">


<h2 id="eventTitle">Write a Comment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="individualPost">
        <div id="picComments">
            <iframe border="none" marginheight="0em;" marginwidth="0em;" scrolling="no" height="160px" width="165px" src="~/PhotoDownloadForm.aspx?id=@Html.DisplayFor(model => model.PostID)" alt=""></iframe>
        </div>
        <div id="statusName" style="margin-top: 1px;">

            @Html.DisplayFor(model => model.PostFirstName)
            @Html.DisplayFor(model => model.PostLastName)
            - @Html.DisplayFor(model => model.PostDate)
        </div>
        <div id="statusTitle" style="font-size: 30px;">
            @Html.DisplayFor(model => model.PostTitle)
        </div>
        <div id="postDescription">
            @Html.DisplayFor(model => model.PostBody)
        </div><hr/><br/>
        <div id="individualComment" style="height: 130px;">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group">

                @Html.Label("My Comment: ", htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Text, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="hidden" name="postID" value="@Html.DisplayFor(model => model.PostID)"/>
                    <input type="hidden" name="text" value="@Html.DisplayFor(model => model.Text)"/>
                    <input type="submit" value="✍️ Comment" class="btn btn-default" id="commentButton2"/> @*using history.back() to go back a page once the user submits the comment.*@
                </div>
            </div>
        </div>
    </div>
}

<div id="eventLink">
    @Html.ActionLink("Back to List", "Index")
</div>
