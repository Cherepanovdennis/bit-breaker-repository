@model SimplySeniors.Models.FollowList

@{
    ViewBag.Title = "Create";
}

<h2>Follow User</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enter ID to follow user</h4>
        @* Hopefully will be name eventually *@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" id="editBox">
            @Html.LabelFor(model => model.FollowedUserID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" >
                @Html.EditorFor(model => model.FollowedUserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FollowedUserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </div>
    </div>
}

<div id="eventLink">
    @Html.ActionLink("Go Back Home", "HomePage", "UserHomePage")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
